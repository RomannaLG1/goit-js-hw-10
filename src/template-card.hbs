{{#each this}}
  <div class='country-info'>
    <h2 class='country-title'>
      <img
        class='country-img'
        src='{{flags.svg}}'
        alt='{{name.common}}'
        width='45'
        height='40'
      />

      {{name.official}}
    </h2>

    <p class='country-capital'>Capital: {{capital}}</p>
    <p class='country-population'>Population: {{population}}</p>
    <p class='country-languages'>Languages:

      {{#each languages}} {{this}} {{#unless @last}}, {{/unless}} {{/each}}
    </p>
  </div>
{{/each}}