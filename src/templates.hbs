<div class="country-info">
      <h2 class="country-title">
        <svg class="country-flag" width="24" height="24">
          <use href="{{flags.svg}}"></use>
        </svg>
        Name: {{name}}
      </h2>

      <p class="country-capital">Capital: {{capital}}</p>
      <p class="country-population">Population: {{population}}</p>
      <p class="country-languages">Languages: </p>
      {{#each languages}}
      <ul class="languages-list">
        <li class="languages-item">{{languages.name}}</li>
      </ul>
      {{/each}}
    </div>